{
    "version": "2.0.0",
    "configurations": [        
        //--- Debuging configuration for Windows usage ---//
        {
            "name": "Debug Application: AI-Playground(Windows-MinGW)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/Playground_x86_64/Debug/Playground.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "console": "externalTerminal",
            "preLaunchTask": "C/C++ MinGW: Build Project(Debug-x64-Windows)"
        },
        {
            "name": "Debug Application: AI-Playground(Windows-MSVC)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/Playground_x86_64/Debug/Playground.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "console": "externalTerminal",
            "preLaunchTask": "C/C++ MSVC: Build Project(Debug-x64-Windows)"
        },
        //--- Debuging configuration for Unix/MacOS usage ---//
        {
            "name": "Debug Application: AI-Playground(Unix/MacOS)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/Playground_x86_64/Debug/Playground",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "externalConsole": true,
            "MIMode": "gdb",
            "preLaunchTask": "C/C++ MAKE: Build Project(Debug-x64-Unix/MacOS)"
        }
    ]
}