{
    "version": "2.0.0",
    "tasks": [
        //--- General usages tasks ---//
        {
            "type": "shell",
            "label": "Initialise & update submodules for project",
            "command": "git submodule update --init --recursive",
            "args": [],
            "group": "build"
        },
        //--- Tasks configurations for Windows usage ---//
        {
            "type": "process",
            "label": "C/C++ MSVC: Build Project(Debug-x64-Windows)",
            "command": "C:/Program Files/Microsoft Visual Studio/2022/Community/Msbuild/Current/Bin/msbuild.exe",
            "args": [
                "${workspaceFolder}/Environment-Simulation.sln",
                "/p:Configuration=Debug;Platform=x64",
                "/fl",
                "/flp:LogFile=${workspaceFolder}/logs/build/msbuild.log"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "process",
            "label": "C/C++ MSVC: Build Project(Release-x64-Windows)",
            "command": "C:/Program Files/Microsoft Visual Studio/2022/Community/Msbuild/Current/Bin/msbuild.exe",
            "args": [
                "${workspaceFolder}/Environment-Simulation.sln",
                "/p:Configuration=Release;Platform=x64",
                "/fl",
                "/flp:LogFile=${workspaceFolder}/logs/build/msbuild.log"
            ],
            "problemMatcher": "$msCompile",
            "group": "build"
        },
        {
            "type": "shell",
            "label": "Run Release: Environment-Simulation(Windows)",
            "command": "${workspaceFolder}/bin/Environment-Simulation_x86_64/Release/Environment-Simulation.exe",
            "args": [],
            "dependsOn": ["C/C++ MSVC: Build Project(Release-x64-Windows)"],
            "problemMatcher": "$msCompile"
        },
        //--- Tasks configurations for Unix/MacOS usage ---//
        {
            "type": "shell",
            "label": "C/C++ MAKE: Build Project(Debug-x64-Unix/MacOS)",
            "command": "make",
            "args": [
                "--directory=${workspaceFolder}/bin",
                "config=debug"
            ],
            "group": "build",
            "presentation": {
                "reveal":"always"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "type": "shell",
            "label": "C/C++ MAKE: Build Project(Release-x64-Unix/MacOS)",
            "command": "make",
            "args": [
                "--directory=${workspaceFolder}/bin",
                "config=release"
            ],
            "group": "build",
            "presentation": {
                "reveal":"always"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "type": "shell",
            "label": "Run Release: Environment-Simulation(Unix/MacOS)",
            "command": "${workspaceFolder}/bin/Environment-Simulation_x86_64/Release/Environment-Simulation",
            "args": [],
            "dependsOn": ["C/C++ MAKE: Build Project(Release-x64-Unix/MacOS)"],
            "problemMatcher": "$msCompile"
        }
    ]
}