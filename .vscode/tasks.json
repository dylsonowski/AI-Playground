{
    "version": "2.0.0",
    "tasks": [
        //--- Tasks configurations for Windows usage ---//
        {
            "type": "process",
            "label": "C/C++ MSVC: Build Project(Debug-x64-Windows)",
            "command": "C:/Program Files/Microsoft Visual Studio/2022/Community/Msbuild/Current/Bin/msbuild.exe",
            "args": [
                "${workspaceFolder}/Untilted-Pokemon-Game.sln",
                "/p:Configuration=Debug;Platform=x64",
                "/fl",
                "/flp:LogFile=${workspaceFolder}/logs/msbuild.log"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "process",
            "label": "C/C++ MSVC: Build Project(Release-x64-Windows)",
            "command": "C:/Program Files/Microsoft Visual Studio/2022/Community/Msbuild/Current/Bin/msbuild.exe",
            "args": [
                "${workspaceFolder}/Untilted-Pokemon-Game.sln",
                "/p:Configuration=Release;Platform=x64",
                "/fl",
                "/flp:LogFile=${workspaceFolder}/logs/msbuild.log"
            ],
            "problemMatcher": "$msCompile",
            "group": "build"
        },
        {
            "type": "shell",
            "label": "Run Release: Untilted-Pokemon-Game(Windows)",
            "command": "${workspaceFolder}/bin/Pale-Engine_x86_64/Release/Pale-Engine.exe",
            "args": [],
            "dependsOn": ["C/C++ MSVC: Build Project(Release-x64-Windows)"],
            "problemMatcher": "$msCompile"
        },
        //--- Tasks configurations for Unix/MacOS usage ---//
        {
            "type": "shell",
            "label": "C/C++ MAKE: Build Project(Debug-x64-Unix/MacOS)",
            "command": "make",
            "args": [
                "--directory=${workspaceFolder}/bin",
                "config=debug"
            ],
            "group": "build",
            "presentation": {
                "reveal":"always"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "type": "shell",
            "label": "C/C++ MAKE: Build Project(Release-x64-Unix/MacOS)",
            "command": "make",
            "args": [
                "--directory=${workspaceFolder}/bin",
                "config=release"
            ],
            "group": "build",
            "presentation": {
                "reveal":"always"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "type": "shell",
            "label": "Run Release: Untilted-Pokemon-Game(Unix/MacOS)",
            "command": "${workspaceFolder}/bin/Pale-Engine_x86_64/Release/Pale-Engine",
            "args": [],
            "dependsOn": ["C/C++ MAKE: Build Project(Release-x64-Unix/MacOS)"],
            "problemMatcher": "$msCompile"
        }
    ]
}